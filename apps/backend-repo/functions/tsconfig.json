{
  "compilerOptions": {
    "module": "commonjs",          
    "target": "es2017",           
    "strict": true,               
    "noImplicitReturns": true,    
    "noUnusedLocals": true,        
    "esModuleInterop": true,       
    "outDir": "lib",              
    "rootDir": "src",             
    "sourceMap": true,            
    "skipLibCheck": true          
  },
  "include": ["src"],             
  "exclude": ["node_modules"]    
}
